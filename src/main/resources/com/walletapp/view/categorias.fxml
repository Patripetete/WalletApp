<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.walletapp.controller.CategoriaController"
      stylesheets="@../css/styles.css">
    <padding><Insets top="20" right="25" bottom="20" left="25"/></padding>

    <Label text="Categorías" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="10">
        <Button text="Nueva categoría" onAction="#nuevaCategoria"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 16;"/>
        <Button text="Eliminar" onAction="#eliminarCategoria"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 16;"/>
    </HBox>

    <TableView fx:id="tablaCategorias" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="280"/>
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="150"/>
            <TableColumn fx:id="colOrigen" text="Origen" prefWidth="150"/>
        </columns>
        <placeholder><Label text="No hay categorías disponibles"/></placeholder>
    </TableView>
</VBox>
