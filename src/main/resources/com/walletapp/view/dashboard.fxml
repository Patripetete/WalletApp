<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.walletapp.controller.DashboardController"
            stylesheets="@../css/styles.css">

    <left>
        <VBox prefWidth="210" spacing="5" style="-fx-background-color: #2c3e50; -fx-padding: 0;">
            <padding><Insets top="20" right="0" bottom="20" left="0"/></padding>

            <Label text="WalletApp" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 10 20 20 20;"/>

            <Separator style="-fx-background-color: #34495e;"/>

            <Button text="   Dashboard" onAction="#mostrarDashboard" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 20; -fx-cursor: hand;"/>
            <Button text="   Transacciones" onAction="#mostrarTransacciones" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 20; -fx-cursor: hand;"/>
            <Button text="   Cuentas" onAction="#mostrarCuentas" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 20; -fx-cursor: hand;"/>
            <Button text="   Categorías" onAction="#mostrarCategorias" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 20; -fx-cursor: hand;"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Separator style="-fx-background-color: #34495e;"/>
            <Label fx:id="lblUsuario" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12; -fx-padding: 10 20 5 20;" wrapText="true"/>
            <Button text="Cerrar sesión" onAction="#cerrarSesion" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-font-size: 12; -fx-padding: 5 20 10 20; -fx-cursor: hand;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #f4f6f9;"/>
    </center>
</BorderPane>
