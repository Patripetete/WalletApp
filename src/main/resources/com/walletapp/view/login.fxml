<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15" styleClass="login-container"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.walletapp.controller.LoginController"
      stylesheets="@../css/styles.css">
    <padding><Insets top="60" right="40" bottom="60" left="40"/></padding>

    <VBox alignment="CENTER" spacing="20" maxWidth="360" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 4);">
        <Label text="WalletApp" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Gestor de Finanzas Personales" style="-fx-font-size: 13; -fx-text-fill: #7f8c8d;"/>

        <VBox spacing="10">
            <TextField fx:id="txtUsername" promptText="Nombre de usuario" prefWidth="280" prefHeight="38"/>
            <PasswordField fx:id="txtPassword" promptText="Contraseña" prefWidth="280" prefHeight="38"/>
        </VBox>

        <Label fx:id="lblError" style="-fx-text-fill: #e74c3c; -fx-font-size: 12;" wrapText="true"/>

        <Button text="Iniciar sesión" onAction="#login" prefWidth="280" prefHeight="40"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand;"/>

        <Hyperlink text="¿No tienes cuenta? Regístrate" onAction="#irARegistro"
                   style="-fx-text-fill: #3498db; -fx-font-size: 12;"/>
    </VBox>
</VBox>
